@model PageableResponse<GetClassesResponse>

<div style="display: flex; gap: 10px; flex-wrap: wrap">

    @foreach (var cls in Model.Records)
    {
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="@cls.Image" class="img-fluid rounded-start">
            </div>
            <div class="col-md-8">
              <div class="card-body" style="position: relative; height:100%">
                <h5 class="card-title">@cls.Title</h5>
                <p class="card-text">@cls.DetailHTML</p>
                <p class="card-text"><small class="text-muted">Monday - Friday from @cls.ClassFrom - @cls.ClassTo</small></p>
                <div style="display:flex; gap: 10px; flex-wrap: wrap; position: absolute; bottom: 10px">
                    @if(cls.AlreadyEnrolled)
                    {
                        <button class="btn btn-primary">Already Enrolled</button>
                    }
                    else
                    {
                        <form action="/class/enroll?courseId=@cls.Id" method="post">
                            <button type="submit" disabled="@(cls.StudentCount >= cls.ClassSize ? true : false)" title="@(cls.StudentCount >= cls.ClassSize ? "Class size is full" : "")" class="btn btn-primary">Enroll Now</button>
                        </form>
                    }
                    <button class="btn btn-secondary">View Detail</button>
                </div>
              </div>
            </div>
          </div>
        </div>

    }

</div>